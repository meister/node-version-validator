{
  "name": "@pipedrive/version-validator",
  "version": "0.0.3",
  "description": "Version validator module for internal libraries",
  "main": "index.js",
  "bin": {
    "version-validator": "./cli.js"
  },
  "engines": {
    "node": ">=8.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipedrive/node-version-validator.git"
  },
  "author": "Martin Kapp <kapp@pipedrive.com> (https://github.com/meister)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pipedrive/node-version-validator/issues"
  },
  "homepage": "https://github.com/pipedrive/node-version-validator#readme",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "node_modules/node-hooks/bin/runner lint .",
    "npm-version-check": "node_modules/node-hooks/bin/runner npm-version-check",
    "npm-shrinkwrap": "node_modules/node-hooks/bin/runner npm-shrinkwrap",
    "update-project-version": "node_modules/node-hooks/bin/update-project-version",
    "sonar-preview": "node_modules/.bin/pipedrive-sonar-scanner preview",
    "sonar-report": "node_modules/.bin/pipedrive-sonar-scanner report",
    "add-npm-lockfile": "node_modules/node-hooks/bin/git-add-npm-lockfile",
    "sonar-ci": "node_modules/.bin/pipedrive-sonar-scanner ci"
  },
  "dependencies": {
    "cli-color": "^1.1.0",
    "cli-table": "^0.3.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@pipedrive/sonar-scanner": "^2.0.1",
    "eslint": "^4.16.0",
    "eslint-config-pipedrive": "^2.0.0",
    "jest": "^22.1.4",
    "node-hooks": "git+ssh://git@github.com/pipedrive/node-hooks.git#v1.4.1"
  },
  "node-hooks": {
    "preset": "es8",
    "preserve-files": [
      "test/.eslintrc.json"
    ]
  },
  "jest": {
    "verbose": true,
    "testRegex": "/test/.*\\.js$",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageDirectory": "coverage"
  },
  "dependencySum": "cb3e96713e33d0b204fb485b5dfa4893",
  "devDependencySum": "042e9f44edb9df8db67fbaad367685ef",
  "pre-commit": [
    "lint",
    "test",
    "npm-version-check",
    "npm-shrinkwrap",
    "add-npm-lockfile",
    "update-project-version"
  ],
  "pre-push": [],
  "post-merge": []
}
